<h2>Categories</h2>
<% @categories.each do |category| %>
  
  <div class="category_name">
    <a href="/categories/<%=category.id%>" ><%= category.id%>.  <%= category.name%></a>
  </div>
<% end %>
<h3>Add a Post</h3>
<div class="post_form"> 
  <form action="/post" method="post">
    <div class="field"><input type="text" name="title" value="title" class="input_field"></div>
    <div class="field"><input type="text" name="location" value="location" class="input_field"></div>
    <div class="field"><input type="text" name="body" value="body" class="input_field"></div>
    <div class="field"><input type="float" name="price" value="price" class="input_field"></div>
    <div class="field"><input type="text" name="email" value="email" class="input_field"></div>
    <div class="field"><input type="text" name="contact_name" value="name" class="input_field"></div>
    <div class="field">
      <select name="category_id">
        <option value=0>Category</option>
        <option value=1>Apartments</option>
        <option value=2>Cars For Sale</option>
        <option value=3>Sexual Healing</option>
        <option value=4>Jobs</option>
      </select>
    </div>
    <input type="submit" value="Post">
  </form>
</div>


